{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2021",
    "outDir": "dist",
    "rootDir": "src",
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": ["src/@types"],
    "types": ["node"]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
